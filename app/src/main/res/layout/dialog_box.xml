<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="50dp"
    android:background="#E94A4444"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/savechanges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:padding="10dp"
        android:text="Save changes ?"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

    <TextView
        android:id="@+id/savebtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Save"
        android:gravity="center"
        android:background="#00FF0A"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawablePadding="5dp"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="@id/savechanges"
        app:layout_constraintTop_toBottomOf="@id/savechanges"
         />

    <TextView
        android:id="@+id/discardbtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Discard"
        android:gravity="center"
        android:background="#FF1100"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawablePadding="5dp"
        android:padding="10dp"
        app:layout_constraintRight_toRightOf="@id/savechanges"
        app:layout_constraintTop_toBottomOf="@id/savechanges"
        />

</androidx.constraintlayout.widget.ConstraintLayout>